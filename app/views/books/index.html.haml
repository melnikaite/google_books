%h3= t('books.google_books')

= form_for 'search',  :method => :get,
                      :url => {:action => :index},
                      :html => {:class => 'search-form'} do |f|
  = f.text_field :query, :class => 'search-query', :value => @query
  = f.submit :search, :class => 'btn'

%h5= "#{t('books.query')}: #{@query}"

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= t('books.title')
      %th= t('books.author')
      %th= t('books.thumbnail')
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= book.thumbnail
